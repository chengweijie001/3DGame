<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        >
        <com.huaxing.a3dgame.customview.MainFragmentViewPager
            android:id="@+id/mainfragmentviewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.huaxing.a3dgame.customview.MainFragmentViewPager>
        <LinearLayout
            android:id="@+id/mainfragment_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center_horizontal">
            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:padding="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/main_point_shape"/>
            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginRight="10dp"
                android:padding="20dp"
                android:background="@drawable/main_point_shape"/>
            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginRight="10dp"
                android:padding="20dp"
                android:background="@drawable/main_point_shape"/>
        </LinearLayout>
    </FrameLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView   xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainfragment_pulltorefresh_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        app:ptrMode="both"
        />

</LinearLayout>