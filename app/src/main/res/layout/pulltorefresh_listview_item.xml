<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <ImageView
          android:id="@+id/pulltorefresh_listview_item_imageview"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:src="@drawable/pulltorefresh_listview_item_default"/>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="5"
          android:orientation="vertical"
          android:gravity="center">
          <TextView
              android:id="@+id/pulltorefresh_listview_item_tv1"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:singleLine="true"
              android:text="我是测试的，不要管我"
              android:gravity="center_horizontal|bottom"
              android:textSize="14sp"/>
          <TextView
              android:id="@+id/pulltorefresh_listview_item_tv2"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:lines="1"
              android:text="2016-07-07 10:53"
              android:gravity="center_horizontal"/>
      </LinearLayout>
      <TextView
          android:id="@+id/pulltorefresh_listview_item_tv3"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:text="1222"
          android:textSize="14sp"
          android:gravity="center"/>
  </LinearLayout>
</LinearLayout>